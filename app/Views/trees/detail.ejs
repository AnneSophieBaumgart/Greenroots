<%-include('../partials/header')%>

    <section id="details">
        <h1 class="details_h1">Détail du <%= item.name %>  </h1>
        <div class="retour">
            <a class="retour_button" href="/trees"> &lt;&lt; Retour aux arbres</a>
        </div>

        
        <article class="article_details">
          <img class="article_image"
            src="<%= item.image %>"
            alt="<%= item.name %>"
          />
          <div class="details_info">
            <h2><span>Nom</span> : <%= item.name %></h2>
            <p><span>Origine </span> : <%= item.origin %></p>
            <p><span>Prix</span> : <%= item.price %> €</p>

            <p class="desc"><span>Description</span> : <%= item.description %></p>
            
            <p><span>Disponibilité</span> : <%=item.stock%> Arbres</p>
            <a class="ajouter_au_panier_button" href="/panier">Ajouter au panier</a>    
            
            
          </div>
        </article>
        
      </section>

      <%-include('../partials/footer')%>