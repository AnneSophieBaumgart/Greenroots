<%- include('../partials/header') %>

<section class="section">
    <h1 class="trees_h1"><%= title %></h1>

    <div class="trees_section">
        <% if (items && items.length > 0) { %>
            <% items.forEach(tree => { %>
            <article class="tree_card">
                <a href="/trees/<%= tree.id %>">
                    <img class="tree_img" 
                        src="<%= tree.image ? tree.image : '/images/default-tree.jpg' %>" 
                        alt="<%= tree.name %>">
                </a>
                <h2 class="name"><a href="/trees/<%= tree.id %>"><%= tree.name %></a></h2>
            <p class="description"><%= tree.description || 'Aucune description disponible.' %></p>
            <span class="price">Prix : <%= tree.price %> ‚Ç¨</span>
            <button class="buy_button">Acheter</button>
            <% if (userRole === 'admin') { %>
                <form action="/trees/<%= tree.id %>/delete" method="POST" onsubmit="return confirm('Supprimer cet arbre ?')">
                    <button type="submit" class="delete-btn">üóë Supprimer</button>
                    <a href="/trees/<%= tree.id %>/edit" class="edit-btn">‚úèÔ∏è Modifier</a>
                </form>
            <% } %>

            </article>
        <% }) %>
        <% } else { %>
            <p class="no_items">Aucun arbre disponible pour le moment.</p>
        <% } %>
    </div>
</section>

<%- include('../partials/footer') %>
