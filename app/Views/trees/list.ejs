<%- include('../partials/header') %>

  <section class="section">
    <h1 class="trees_h1">
      <%= title %>
    </h1>
    <div class="create">
      <a class="create_button" href="/create">Ajouter un arbre</a>
    </div>
    <div class="trees_section">
      <% if (items && items.length> 0) { %>
        <% items.forEach(tree=> { %>
          <article class="tree_card">
            <a href="/trees/<%= tree.id %>">
              <img class="tree_img" src="<%= tree.image ? tree.image : '/images/default-tree.jpg' %>"
                alt="<%= tree.name %>">
            </a>
            <h2 class="name"><a href="/trees/<%= tree.id %>">
                <%= tree.name %>
              </a></h2>
            <p class="description">
              <%= tree.description || 'Aucune description disponible.' %>
            </p>
            <span class="price">Prix : <%= tree.price %> â‚¬</span>
            <button class="buy_button">Acheter</button>
            <% if (userRole==='admin' ) { %>
              <form action="/trees/<%= tree.id %>/edit" method="POST" onsubmit="return confirm('Modifier cet arbre ?')">
                <button type="submit" class="edit_button">Modifier</button>
              </form>
              <form action="/trees/<%= tree.id %>/delete" method="POST"
                onsubmit="return confirm('Supprimer cet arbre ?')">
                <button type="submit" class="delete_button">Supprimer</button>
              </form>
              <% } %>

          </article>
          <% }) %>
            <% } else { %>
              <p class="no_items">Aucun arbre disponible pour le moment.</p>
              <% } %>
    </div>
  </section>

  <%- include('../partials/footer') %>